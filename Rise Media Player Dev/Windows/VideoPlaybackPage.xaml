<Page
    x:Class="Rise.App.Views.VideoPlaybackPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:uc="using:Rise.App.UserControls"
    mc:Ignorable="d">

    <Grid>
        <MediaPlayerElement x:Name="PlayerElement"
                            AreTransportControlsEnabled="True"
                            Visibility="Visible">
            <MediaPlayerElement.TransportControls>
                <MediaTransportControls x:Name="MediaControls"
                                        IsFastForwardButtonVisible="False"
                                        IsFastForwardEnabled="False"
                                        IsFastRewindButtonVisible="False"
                                        IsFastRewindEnabled="False"
                                        IsPlaybackRateButtonVisible="True"
                                        IsPlaybackRateEnabled="True"
                                        IsFullWindowButtonVisible="False"
                                        IsFullWindowEnabled="False"
                                        IsZoomButtonVisible="False"
                                        IsRepeatButtonVisible="True"
                                        IsRepeatEnabled="True"
                                        IsSkipBackwardButtonVisible="True"
                                        IsSkipForwardButtonVisible="True"
                                        IsSkipBackwardEnabled="True"
                                        IsSkipForwardEnabled="True"
                                        IsCompact="False"
                                        IsSeekBarVisible="True"
                                        IsSeekEnabled="True"
                                        IsNextTrackButtonVisible="False"
                                        IsPreviousTrackButtonVisible="False" />
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>

        <Grid ColumnSpacing="8" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton"
                    Command="{x:Bind NavigationHelper.GoBackCommand}"
                    Height="40"
                    Style="{StaticResource TransparentButton}"
                    Width="40"
                    VerticalAlignment="Top"
                    AutomationProperties.Name="Back"
                    AutomationProperties.AutomationId="BackButton"
                    AutomationProperties.ItemType="Navigation Button">
                <muxc:AnimatedIcon>
                    <animatedvisuals:AnimatedBackVisualSource/>
                    <muxc:AnimatedIcon.FallbackIconSource>
                        <muxc:SymbolIconSource Symbol="Back"/>
                    </muxc:AnimatedIcon.FallbackIconSource>
                </muxc:AnimatedIcon>
            </Button>

            <uc:MicaTitleBar x:Name="AppTitleBar"
                             Grid.Column="1"
                             Canvas.ZIndex="1"
                             AddLabelWidth="800"
                             Height="40"
                             IsHitTestVisible="False"
                             ShowIcon="True"
                             VerticalAlignment="Top" />
        </Grid>
    </Grid>
</Page>
