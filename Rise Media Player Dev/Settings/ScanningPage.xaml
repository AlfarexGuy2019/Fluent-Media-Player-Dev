<Page
    x:Class="Rise.App.Settings.ScanningPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:conv="using:Rise.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Rise.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:uc="using:Rise.App.UserControls"
    xmlns:viewmodels="using:Rise.App.ViewModels" xmlns:local1="using:Rise.App"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical" Spacing="4">
<TextBlock Text="Automatic scanning" Margin="0,-10,0,0" Style="{StaticResource Subheader}" />
        <Grid>
            <StackPanel>
                <uc:ExpanderControl x:Uid="/MediaLibrary/AutoScanMedia"
                               ExpanderStyle="Static"
                               Icon="&#xE12E;">
                    <ToggleSwitch IsOn="{x:Bind local1:App.SViewModel.AutoIndexingEnabled, Mode=TwoWay}" />
                </uc:ExpanderControl>

                <Border
                    VerticalAlignment="Stretch"
                    Background="{ThemeResource LayerFillColorDefaultBrush}" 
                    HorizontalAlignment="Stretch"
                        Height="66"
                    CornerRadius="3"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel Orientation="Vertical" Padding="15,8,15,8">
                        <uc:ExpanderControl VerticalAlignment="Center" x:Uid="/MediaLibrary/AutoScanMedia"
                               ExpanderStyle="Transparent"
                               Icon="&#xE12E;">
                            <ToggleSwitch IsOn="{x:Bind local1:App.SViewModel.AutoIndexingEnabled, Mode=TwoWay}" />
                        </uc:ExpanderControl>
                    </StackPanel>
                    
                </Border>

                <muxc:RadioButtons SelectionChanged="PeriodicScan_SelectionChanged" IsEnabled="{x:Bind local1:App.SViewModel.AutoIndexingEnabled, Mode=OneWay}" Margin="0,14,0,0" MaxColumns="7" x:Name="PeriodicScan" Header="Scan periodically every:">
                    <x:String>Never</x:String>
                    <x:String>1 minute</x:String>
                    <x:String>5 minutes</x:String>
                    <x:String>10 minutes</x:String>
                    <x:String>30 minutes</x:String>
                    <x:String>1 hour</x:String>
                </muxc:RadioButtons>
            </StackPanel>
        </Grid>

    </StackPanel>

</Page>
