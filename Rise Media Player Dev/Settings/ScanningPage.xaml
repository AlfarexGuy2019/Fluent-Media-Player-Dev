<Page
    x:Class="Rise.App.Settings.ScanningPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:system="using:System"
    xmlns:uc="using:Rise.App.UserControls"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,10,0,0"
        Orientation="Vertical"
        Spacing="4">
        <Grid>
            <StackPanel>
                <uc:ExpanderControl
                    x:Uid="/MediaLibrary/ManualScan"
                    ExpanderStyle="Static"
                    Icon="&#xE773;">
                    <Button
                        x:Name="ManualScanButton"
                        MaxWidth="150"
                        Click="ManualScanButton_Click"
                        Content="Scan now" />
                </uc:ExpanderControl>

                <StackPanel x:Name="ScanningStuff">
                    <Border
                        x:Name="PeriodicBorder"
                        Height="120"
                        Margin="0,4,0,0"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Style="{StaticResource SettingsCard}">
                        <StackPanel Padding="15,8,15,8" Orientation="Vertical">
                            <uc:ExpanderControl
                                x:Uid="/MediaLibrary/AutoScanMedia"
                                VerticalAlignment="Center"
                                ExpanderStyle="Transparent"
                                Icon="&#xE121;">
                                <ToggleSwitch x:Name="PeriodicSwitch" IsOn="{x:Bind ViewModel.IndexingTimerEnabled, Mode=TwoWay}" />
                            </uc:ExpanderControl>

                            <StackPanel x:Name="PeriodicContent" Visibility="{x:Bind ViewModel.IndexingTimerEnabled, Mode=OneWay}">
                                <Rectangle
                                    Height="1"
                                    Margin="-16,8,-16,0"
                                    HorizontalAlignment="Stretch"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                                <StackPanel Margin="28,0,15,0" Orientation="Horizontal">
                                    <TextBlock
                                        FontWeight="Normal"
                                        Style="{StaticResource SubheaderTextBlockStyle}"
                                        Text="Run every:" />
                                    <muxc:RadioButtons
                                        x:Name="PeriodicScan"
                                        Margin="16,3,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        ItemsSource="{x:Bind Intervals}"
                                        MaxColumns="7"
                                        SelectedIndex="{x:Bind system:Array.IndexOf(MinuteIntervals, ViewModel.IndexingTimerInterval)}"
                                        SelectionChanged="PeriodicScan_SelectionChanged" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border
                        x:Name="EventsBorder"
                        Height="254"
                        Margin="0,4,0,0"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="3"
                        Style="{StaticResource SettingsCard}">
                        <StackPanel Padding="15,8,15,8" Orientation="Vertical">
                            <uc:ExpanderControl
                                x:Uid="/MediaLibrary/EventsScan"
                                VerticalAlignment="Center"
                                ExpanderStyle="Transparent"
                                Icon="&#xF78D;">
                                <ToggleSwitch x:Name="EventsSwitch" IsOn="{x:Bind ViewModel.IndexingEventsEnabled, Mode=TwoWay}" />
                            </uc:ExpanderControl>

                            <StackPanel x:Name="EventsContent" Visibility="{x:Bind ViewModel.IndexingEventsEnabled, Mode=OneWay}">
                                <Rectangle
                                    Height="1"
                                    Margin="-16,8,-16,0"
                                    HorizontalAlignment="Stretch"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                                <StackPanel Margin="28,0,15,0" Orientation="Vertical">
                                    <uc:ExpanderControl
                                        x:Uid="/MediaLibrary/Open"
                                        Margin="-13,-2,13,0"
                                        ExpanderStyle="Transparent">
                                        <ToggleSwitch x:Name="OpenSwitch" IsOn="{x:Bind ViewModel.IndexingAtStartupEnabled, Mode=TwoWay}" />
                                    </uc:ExpanderControl>
                                </StackPanel>

                                <Rectangle
                                    Height="1"
                                    Margin="-16,0,-16,00"
                                    HorizontalAlignment="Stretch"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                                <StackPanel Margin="28,0,15,0" Orientation="Vertical">
                                    <uc:ExpanderControl
                                        x:Uid="/MediaLibrary/DeviceConnect"
                                        Margin="-13,-2,13,0"
                                        ExpanderStyle="Transparent">
                                        <ToggleSwitch x:Name="DeviceSwitch" />
                                    </uc:ExpanderControl>
                                </StackPanel>

                                <Rectangle
                                    Height="1"
                                    Margin="-16,0,-16,0"
                                    HorizontalAlignment="Stretch"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                                <StackPanel Margin="28,0,15,0" Orientation="Vertical">
                                    <uc:ExpanderControl
                                        x:Uid="/MediaLibrary/AddLocation"
                                        Margin="-13,-2,13,0"
                                        ExpanderStyle="Transparent">
                                        <ToggleSwitch x:Name="LocationSwitch" />
                                    </uc:ExpanderControl>
                                </StackPanel>

                                <Rectangle
                                    Height="1"
                                    Margin="-16,0,-16,00"
                                    HorizontalAlignment="Stretch"
                                    Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                                <StackPanel Margin="28,0,15,0" Orientation="Vertical">
                                    <uc:ExpanderControl
                                        x:Uid="/MediaLibrary/FilesAdd"
                                        Margin="-13,-2,13,0"
                                        ExpanderStyle="Transparent">
                                        <ToggleSwitch x:Name="FilesAddSwitch" IsOn="{x:Bind ViewModel.IndexingFileTrackingEnabled}" />
                                    </uc:ExpanderControl>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
    </StackPanel>
</Page>
