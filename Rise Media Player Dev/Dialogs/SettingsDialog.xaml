<ContentDialog
    x:Class="RMP.App.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Style="{StaticResource DefaultContentDialogStyle}"
    SizeChanged="ContentDialog_SizeChanged">

    <ContentDialog.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">962</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">598</x:Double>
        <Style TargetType="muxc:BreadcrumbBarItem">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </ContentDialog.Resources>

    <Grid x:Name="RootGrid" Margin="-24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Rectangle x:Name="DualTone"
                   Fill="{ThemeResource ContentDialogBackground}"
                   Height="60"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top" />

        <Grid BorderBrush="{ThemeResource NavigationViewContentGridBorderBrush}"
              BorderThickness="0,0,0,1"
              ColumnSpacing="8"
              Height="Auto"
              HorizontalAlignment="Stretch"
              Padding="14"
              VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          HorizontalAlignment="Stretch"
                          VerticalScrollBarVisibility="Hidden">
                <Grid ColumnSpacing="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ToggleButton x:Name="Library"
                                  Checked="ToggleButton_Checked"
                                  Tag="LibraryItem">
                        <ToggleButton.Content>
                            <Grid ColumnSpacing="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <muxc:ImageIcon Height="16" VerticalAlignment="Center" Source="ms-appx:///Assets/Settings/Library.png" />
                                <TextBlock x:Uid="/Sidebar/Library" Grid.Column="1" />
                            </Grid>
                        </ToggleButton.Content>
                    </ToggleButton>

                    <ToggleButton x:Name="Playback"
                                  Grid.Column="1"
                                  Checked="ToggleButton_Checked"
                                  Tag="PlaybackItem">
                        <ToggleButton.Content>
                            <Grid ColumnSpacing="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <muxc:ImageIcon Height="16" VerticalAlignment="Center" Source="ms-appx:///Assets/Settings/Playback.png" />
                                <TextBlock x:Uid="/Sidebar/Playback" Grid.Column="1" />
                            </Grid>
                        </ToggleButton.Content>
                    </ToggleButton>

                    <ToggleButton x:Name="Appearance"
                                  Grid.Column="2"
                                  Checked="ToggleButton_Checked"
                                  Tag="AppearanceItem">
                        <ToggleButton.Content>
                            <Grid ColumnSpacing="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <muxc:ImageIcon Height="16" VerticalAlignment="Center" Source="ms-appx:///Assets/Settings/Appearance.png" />
                                <TextBlock x:Uid="/Sidebar/Appearance" Grid.Column="1" />
                            </Grid>
                        </ToggleButton.Content>
                    </ToggleButton>
                </Grid>
            </ScrollViewer>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="8">
                <AutoSuggestBox HorizontalAlignment="Stretch"
                                Width="172"
                                PlaceholderText="Find a setting"
                                QueryIcon="Find" />
                <ToggleButton x:Name="About"
                              x:Uid="/Sidebar/About"
                              Checked="ToggleButton_Checked"
                              Height="32"
                              Padding="0"
                              Tag="AboutItem"
                              Width="32">
                    <ToggleButton.Content>
                        <FontIcon Glyph="&#xE946;" />
                    </ToggleButton.Content>
                </ToggleButton>

                <Button x:Uid="/Information/Feedback"
                        Click="Button_Click"
                        Height="32"
                        Padding="0"
                        Width="32">
                    <Button.Content>
                        <FontIcon Glyph="&#xED15;" />
                    </Button.Content>
                </Button>

                <Button x:Name="CloseButton"
                        Click="CloseButton_Click"
                        Height="32"
                        Style="{StaticResource TransparentButton}"
                        Padding="0"
                        ToolTipService.ToolTip="Close"
                        Width="32">
                    <FontIcon FontSize="8" Glyph="&#xE8BB;" />
                </Button>
            </StackPanel>
        </Grid>

        <muxc:BreadcrumbBar x:Name="Header"
                            Grid.Row="1"
                            ItemsSource="{x:Bind Breadcrumbs}"
                            Margin="32,8,0,0" />

        <ScrollViewer Grid.Row="2" Padding="32,0" VerticalScrollBarVisibility="Auto">
            <Frame x:Name="SettingsFrame"
                   x:FieldModifier="public">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <NavigationThemeTransition />
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </ScrollViewer>
    </Grid>
</ContentDialog>
