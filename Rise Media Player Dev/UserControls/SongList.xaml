<UserControl
    x:Class="RMP.App.UserControls.SongList"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:RMP.App.UserControls"
    xmlns:viewmodels="using:RMP.App.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/SongTemplates.xaml" />
    </UserControl.Resources>

    <Grid>
        <ListView x:Name="MainList"
                  DoubleTapped="MainList_DoubleTapped"
                  IsDoubleTapEnabled="True"
                  ItemsSource="{x:Bind List, Mode=OneWay}"
                  Margin="-56,0"
                  Padding="44,0,44,120"
                  RightTapped="MainList_RightTapped"
                  SelectedItem="{x:Bind SelectedSong, Mode=TwoWay}"
                  SelectionMode="Single">
            <ListView.Resources>
                <MenuFlyout x:Key="SongFlyout" x:Name="SongFlyout">
                    <MenuFlyout.Items>
                        <MenuFlyoutItem x:Name="Props"
                                        x:Uid="/MediaData/Properties"
                                        Click="Props_Click">
                            <MenuFlyoutItem.Icon>
                                <FontIcon Glyph="&#xE104;" />
                            </MenuFlyoutItem.Icon>
                        </MenuFlyoutItem>
                    </MenuFlyout.Items>
                </MenuFlyout>
            </ListView.Resources>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:SongViewModel">
                    <uc:ListItemContainer Click="ListItemContainer_Click" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Border x:Name="Header"
                Background="Red"
                Height="100"
                Padding="8"
                Visibility="Collapsed"
                Width="100">
        </Border>
    </Grid>
</UserControl>
