<Page
    x:Class="Rise.App.Views.GenresPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:conv="using:Rise.App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:Height="320"
    d:Width="500"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <conv:ResourceToString x:Key="StrToRes" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid
        Padding="0,0,0,0"
        d:Padding="20,12"
        ColumnSpacing="20">

        <Grid Padding="56,56,56,56" Margin="0,0,0,0">
        <StackPanel>
            <TextBlock
                d:Text="Your genres"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Your genres"
                TextTrimming="WordEllipsis" />
            <TextBlock
                Margin="-1,4,0,0"
                FontSize="16"
                FontWeight="SemiBold"
                Opacity="0.6"
                Text="Only genres are available right now."
                TextTrimming="WordEllipsis" />
        </StackPanel>

        <CommandBar
            Grid.Column="1"
            Margin="0,12,-12,0"
            HorizontalAlignment="Right"
            Background="Transparent"
            DefaultLabelPosition="Right">
            <AppBarButton
                x:Name="AddFolders"
                x:Uid="/MediaLibrary/AddFolders"
                HorizontalAlignment="Right"
                Click="AddFolders_Click"
                Icon="NewFolder" />
        </CommandBar>
        </Grid>
        <ScrollViewer Margin="0,128,0,0">
            <Grid Margin="56,0,56,0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>



                <Border
                    x:Name="GenresCard"
                    Grid.Row="1"
                    Margin="-4,8,-4,120"
                    CornerRadius="5"
                    Style="{StaticResource SettingsCard}">
                    <Grid>
                        <StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <GridView
                                    Grid.ColumnSpan="2"
                                    Margin="-4,2,-4,-4"
                                    
                                    Padding="0"
                                    HorizontalAlignment="Stretch"
                                    animations:Connected.ListItemElementName="GenreThumb"
                                    animations:Connected.ListItemKey="GenreArt"
                                    ItemsSource="{x:Bind Genres}"
                                    SelectedItem="{x:Bind SelectedGenre, Mode=TwoWay}"
                                    SelectionMode="Single"
                                    
                                    Tapped="GridView_Tapped">
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="viewmodels:GenreViewModel">
                                            <Grid Width="150" Margin="12,12,12,12">


                                                <TextBlock
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    Style="{StaticResource BaseTextBlockStyle}"
                                                    Text="{x:Bind Name}" />
                                            </Grid>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>
                            </Grid>

                        </StackPanel>
                    </Grid>
                </Border>
                <Border
                    x:Name="TopCharts"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="-4,16,-4,0"
                    CornerRadius="5"
                    Style="{StaticResource SettingsCard}"
                    Visibility="Collapsed">
                    <Grid>
                        <StackPanel>
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <FontIcon Glyph="&#xE1CE;" />
                                <TextBlock
                                    Margin="8,0,0,0"
                                    FontWeight="SemiBold"
                                    Text="Top Charts" />
                            </StackPanel>
                            <Rectangle
                                Height="1"
                                Margin="-50,12,-50,12"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource ExpanderHeaderBorderBrush}" />

                            <ListView
                                Grid.Row="3"
                                Margin="0"
                                Padding="0"
                                animations:Connected.ListItemElementName="GenreThumb"
                                animations:Connected.ListItemKey="GenreArt"
                                ItemsSource="{x:Bind Genres}"
                                SelectedItem="{x:Bind SelectedGenre, Mode=TwoWay}"
                                SelectionMode="Single"
                                Tapped="GridView_Tapped">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:GenreViewModel">
                                        <Grid Margin="4,12,4,12">

                                            <TextBlock
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                MaxLines="2"
                                                Style="{StaticResource BaseTextBlockStyle}"
                                                Text="{x:Bind Name}"
                                                TextWrapping="Wrap" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
