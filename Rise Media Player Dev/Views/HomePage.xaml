<Page
    x:Class="Rise.App.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:Rise.App.UserControls"
    mc:Ignorable="d">

    <ScrollViewer Margin="-56,0" Padding="56,0" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="12">
            <uc:AdaptiveItemPane>
                <uc:AdaptiveItemPane.LeftPane>
                    <Image Height="45"
                           Source="ms-appx:///Assets/Branding/settingsbanner.png" />
                </uc:AdaptiveItemPane.LeftPane>

                <uc:AdaptiveItemPane.RightPane>
                    <StackPanel Orientation="Horizontal"
                                Spacing="8"
                                VerticalAlignment="Center">
                        <TextBlock Text="v0.0.13"
                                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                                   Margin="0,8,0,0"
                                   Style="{StaticResource BaseTextBlockStyle}" />
                        <TextBlock Text="Pre-Alpha 3"
                                   Style="{StaticResource SubtitleTextBlockStyle}" />
                    </StackPanel>
                </uc:AdaptiveItemPane.RightPane>
            </uc:AdaptiveItemPane>

            <uc:AdaptiveItemPane>
                <uc:AdaptiveItemPane.LeftPane>
                    <TextBlock x:Uid="/Information/NewH"
                               Style="{StaticResource Subheader}" />
                </uc:AdaptiveItemPane.LeftPane>

                <uc:AdaptiveItemPane.RightPane>
                    <TextBlock x:Uid="/Information/ClickFeatureH"
                               Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                               Style="{StaticResource Subheader}" />
                </uc:AdaptiveItemPane.RightPane>
            </uc:AdaptiveItemPane>

            <TextBlock x:Uid="/Information/QuickH"
                       Style="{StaticResource Subheader}" />

            <uc:AdaptiveItemPane>
                <uc:AdaptiveItemPane.LeftPane>
                    <uc:NavigationExpander x:Uid="/Information/AddRemove"
                                           ExpanderStyle="Static"
                                           Height="77"
                                           Icon="&#xE1DA;"
                                           Width="368" />
                </uc:AdaptiveItemPane.LeftPane>

                <uc:AdaptiveItemPane.RightPane>
                    <uc:NavigationExpander x:Uid="/Information/Contribute"
                                           ExpanderStyle="Static"
                                           Height="77"
                                           Icon="&#xEC7A;"
                                           Width="368" />
                </uc:AdaptiveItemPane.RightPane>
            </uc:AdaptiveItemPane>

            <Rectangle Height="120" />
        </StackPanel>
    </ScrollViewer>
</Page>