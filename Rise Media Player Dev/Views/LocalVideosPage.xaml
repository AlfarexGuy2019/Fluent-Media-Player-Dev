<Page
    x:Class="Rise.App.Views.LocalVideosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:Rise.App.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <GridView ItemsSource="{x:Bind MViewModel.FilteredVideos}"
                  Margin="-56,0"
                  Padding="44,0,44,120">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:VideoViewModel">
                    <StackPanel Margin="12"
                                Orientation="Vertical"
                                Spacing="2"
                                Width="238">
                        <Border x:Name="ItemThumbnail"
                                CornerRadius="5">
                            <Image Height="134"
                                   Stretch="UniformToFill"
                                   Width="238">
                                <Image.Source>
                                    <BitmapImage UriSource="{x:Bind Thumbnail}" />
                                </Image.Source>
                            </Image>
                        </Border>

                        <TextBlock Text="{x:Bind Title}"
                                   Padding="0,7,0,0"
                                   MaxLines="1"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
