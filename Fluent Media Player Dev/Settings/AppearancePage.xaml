<Page
    x:Class="Fluent_Media_Player_Dev.Settings.AppearancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fluent_Media_Player_Dev.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Spacing="4">
        <TextBlock Padding="0,0,0,5" FontSize="24" FontWeight="Bold" Style="{ThemeResource TitleTextBlockStyle}" Text="Appearance" />
        <TextBlock Padding="0,10,0,5" FontSize="14" Style="{ThemeResource SubtitleTextBlockStyle}" Text="Basics" />

        <Border x:Name="ColoursExpander" Style="{ThemeResource SettingsCard}" Height="60">
            <Grid ColumnSpacing="8" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                              FontSize="16"
                              Margin="0,12,12,12"
                              Glyph="&#xE790;" />

                    <StackPanel Grid.Column="1"
                            Margin="0,12"
                            Orientation="Vertical">
                        <TextBlock Text="Choose your colour" Style="{StaticResource BodyTextBlockStyle}"/>
                    </StackPanel>
                </Grid>
                <ComboBox Grid.Column="1"  VerticalAlignment="Center" Margin="0,0,-15,0"   PlaceholderText="Use system setting" Width="Auto">
                    <x:String>Light</x:String>
                    <x:String>Dark</x:String>
                    <x:String>Use system setting</x:String>
                </ComboBox>
            </Grid>
        </Border>

        <Border x:Name="HeadersExpander" Style="{ThemeResource SettingsCard}" Height="61">
            <Grid ColumnSpacing="8" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                              FontSize="16"
                              Margin="0,12,12,12"
                              Glyph="&#xE185;" />

                    <StackPanel Grid.Column="1"
                            Margin="0,12"
                            Orientation="Vertical">
                        <TextBlock Text="Show page headers" Style="{StaticResource BodyTextBlockStyle}"/>
                    </StackPanel>
                </Grid>
                <ToggleSwitch Grid.Column="1" Margin="0,0,-90,0"/>
            </Grid>
        </Border>

        <Border x:Name="CompactModeExpander" Style="{ThemeResource SettingsCard}">
            <Grid ColumnSpacing="8" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                              FontSize="16"
                              Margin="0,12,12,12"
                              Glyph="&#xE73F;" />

                    <StackPanel Grid.Column="1"
                            Margin="0,12"
                            Orientation="Vertical">
                        <TextBlock Text="Compact mode" Style="{StaticResource BodyTextBlockStyle}"/>
                        <TextBlock Text="Decreases overall margins and padding to show more content. Makes sidebar groups collapsible."
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="WrapWholeWords" />
                    </StackPanel>
                </Grid>
                <ToggleSwitch Grid.Column="1" Margin="0,0,-90,0"/>
            </Grid>
        </Border>

        <TextBlock Padding="0,20,0,5" FontSize="14" Style="{ThemeResource SubtitleTextBlockStyle}" Text="Sidebar" />
        <muxc:Expander x:Name="MenuItemsExpander">
            <muxc:Expander.Header>
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <FontIcon Margin="0,0,12,0"
                              VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                              FontSize="16"
                              Glyph="&#xE762;"/>

                    <StackPanel Grid.Column="1"
                                Margin="0,12"
                                Orientation="Vertical">
                        <TextBlock Text="Show/hide sidebar items" Style="{StaticResource BodyTextBlockStyle}"/>
                        <TextBlock Text="Choose the items and groups you always want to see on your sidebar."
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="WrapWholeWords"/>
                    </StackPanel>
                </Grid>
            </muxc:Expander.Header>
            <muxc:Expander.Content>
                <StackPanel Orientation="Vertical" Spacing="8" Margin="28,0,44,0">
                    <TextBlock FontSize="14" Style="{ThemeResource SubtitleTextBlockStyle}" Text="General" />
                    <GridView>
                        <CheckBox x:Name="AtAGlance" Content="At a glance" Margin="16,0,0,0" Checked="Option_Checked"
                            Unchecked="Option_Unchecked" />
                        <CheckBox x:Name="Playlists" Content="Playlists" Margin="16,0,0,0" Checked="Option_Checked"
                            Unchecked="Option_Unchecked" IsChecked="True" />
                        <CheckBox x:Name="Devices" Content="Devices" Margin="16,0,0,0" Checked="Option_Checked"
                            Unchecked="Option_Unchecked" IsChecked="True" />
                    </GridView>
                    
                    <TextBlock FontSize="14" Style="{ThemeResource SubtitleTextBlockStyle}" Text="Music" />
                    <GridView>
                        <CheckBox x:Name="Songs" Content="Songs" Margin="16,0,0,0" Checked="Option_Checked"
                            Unchecked="Option_Unchecked" />
                        <CheckBox x:Name="Artists" Content="Artists" Margin="16,0,0,0" Checked="Option_Checked"
                            Unchecked="Option_Unchecked" IsChecked="True" />
                        <CheckBox x:Name="Albums" Content="Albums" Margin="16,0,0,0" Checked="Option_Checked"
                            Unchecked="Option_Unchecked" IsChecked="True" />
                    </GridView>
                    
                    <TextBlock FontSize="14" Style="{ThemeResource SubtitleTextBlockStyle}" Text="Videos" />
                    <GridView>
                        <CheckBox x:Name="LocalVideos" Content="Local videos" Margin="8,0,0,0" Checked="Option_Checked"
                            Unchecked="Option_Unchecked" />
                    </GridView>
                </StackPanel>
            </muxc:Expander.Content>
        </muxc:Expander>
    </StackPanel>
</Page>
